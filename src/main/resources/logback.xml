<?xml version="1.0"?>
<configuration>
    <property name="PROJECT_NAME" value="zhang"/>

    <!-- ch.qos.logback.core.ConsoleAppender 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[${PROJECT_NAME}-console] %p %d{yyyy-MM-dd HH:mm:ss,SSS} %logger{36}: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志级别 -->
    <root>
        <level value="error" />
        <level value="info" />
        <appender-ref ref="console" />
    </root>

</configuration>